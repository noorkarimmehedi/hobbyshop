{% doc %}
  @prompt
    generate a block of three items where one is Whatsapp us to place an order, another one is call us to place an order, and third one is Messenger এ অর্ডার করুন. All should have icons and also be customizable. The section should fit both desktop and mobile, and all sections should be customizable in design like border color and shadow etc.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-order-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap_between_items }}px;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    justify-content: {{ block.settings.alignment }};
    flex-wrap: wrap;
    {% if block.settings.section_border_width > 0 %}
      border: {{ block.settings.section_border_width }}px solid {{ block.settings.section_border_color }};
    {% endif %}
    {% if block.settings.section_shadow_opacity > 0 %}
      box-shadow: {{ block.settings.section_shadow_horizontal }}px {{ block.settings.section_shadow_vertical }}px {{ block.settings.section_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.section_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-contact-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_text_gap }}px;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    text-decoration: none;
    color: {{ block.settings.text_color }};
    transition: all 0.3s ease;
    flex: 1;
    min-width: 200px;
    justify-content: center;
    {% if block.settings.item_border_width > 0 %}
      border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
    {% endif %}
    {% if block.settings.item_shadow_opacity > 0 %}
      box-shadow: {{ block.settings.item_shadow_horizontal }}px {{ block.settings.item_shadow_vertical }}px {{ block.settings.item_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.item_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-contact-item-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.item_hover_background_color }};
    color: {{ block.settings.text_hover_color }};
    transform: translateY(-2px);
    {% if block.settings.item_border_width > 0 %}
      border-color: {{ block.settings.item_hover_border_color }};
    {% endif %}
    {% if block.settings.item_hover_shadow_opacity > 0 %}
      box-shadow: {{ block.settings.item_hover_shadow_horizontal }}px {{ block.settings.item_hover_shadow_vertical }}px {{ block.settings.item_hover_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.item_hover_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-contact-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    color: {{ block.settings.icon_color }};
    transition: color 0.3s ease;
  }

  .ai-contact-item-{{ ai_gen_id }}:hover .ai-contact-icon-{{ ai_gen_id }} {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-contact-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    text-align: center;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-order-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-contact-item-{{ ai_gen_id }} {
      min-width: unset;
      {% if block.settings.mobile_layout == 'column' %}
        flex: none;
        width: 100%;
      {% endif %}
    }

    .ai-contact-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }

    .ai-contact-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }
  }
{% endstyle %}

<div class="ai-contact-order-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.whatsapp_number != blank %}
    <a 
      href="https://wa.me/{{ block.settings.whatsapp_number | replace: '+', '' | replace: ' ', '' | replace: '-', '' }}"
      class="ai-contact-item-{{ ai_gen_id }}"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="WhatsApp us to place an order"
    >
