{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-big-logo-footer-{{ ai_gen_id }} {
    position: sticky;
    bottom: 0;
    left: 0;
    width: 100%;
    height: {{ block.settings.footer_height }}px;
    background-color: {{ block.settings.background_color }};
    z-index: {{ block.settings.z_index }};
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-big-logo-footer-content-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
    padding: {{ block.settings.content_padding }}px;
    text-align: right;
    color: {{ block.settings.text_color }};
  }

  .ai-big-logo-footer-nav-{{ ai_gen_id }} {
    display: flex;
    flex-direction: row;
    gap: {{ block.settings.nav_spacing }}px;
    font-size: {{ block.settings.nav_font_size }}px;
    z-index: 2;
    position: relative;
  }

  .ai-big-logo-footer-nav-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-big-logo-footer-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    text-decoration: none;
    transition: all 0.3s ease;}

  .ai-big-logo-footer-nav-link-{{ ai_gen_id }}:hover {
    text-decoration: underline;
    color: {{ block.settings.link_hover_color }};
  }

  .ai-big-logo-footer-logo-{{ ai_gen_id }} {
    position: absolute;
    bottom: {{ block.settings.logo_offset }}px;
    left: 0;
    font-size: {{ block.settings.logo_font_size }}px;
    color: {{ block.settings.logo_color }};
    font-weight: {{ block.settings.logo_font_weight }};
    line-height: 0.8;
    transform: translateY(33%);
    z-index: 1;
    font-family: {{ block.settings.logo_font.family }}, {{ block.settings.logo_font.fallback_families }};
    font-style: {{ block.settings.logo_font.style }};
    font-weight: {{ block.settings.logo_font.weight }};
  }

  @media screen and (max-width: 768px) {
    .ai-big-logo-footer-{{ ai_gen_id }} {
      height: {{ block.settings.footer_height | times: 0.6 }}px;
    }

    .ai-big-logo-footer-nav-{{ ai_gen_id }} {
      font-size: {{ block.settings.nav_font_size | times: 0.8 }}px;
      gap: {{ block.settings.nav_spacing | times: 0.6 }}px;
    }

    .ai-big-logo-footer-logo-{{ ai_gen_id }} {
      font-size: {{ block.settings.logo_font_size | times: 0.4 }}px;
    }
  }

  @media screen and (max-width: 640px) {
    .ai-big-logo-footer-nav-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.nav_spacing | times: 0.8 }}px;
    }
  }
{% endstyle %}<div class="ai-big-logo-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-big-logo-footer-content-{{ ai_gen_id }}">
    <nav class="ai-big-logo-footer-nav-{{ ai_gen_id }}">
      {% if block.settings.show_column_1 %}
        <div class="ai-big-logo-footer-nav-column-{{ ai_gen_id }}">
          {% if block.settings.link_1_text != blank %}
            <a href="{{ block.settings.link_1_url }}" class="ai-big-logo-footer-nav-link-{{ ai_gen_id }}">
              {{ block.settings.link_1_text }}
            </a>
          {% endif %}
          {% if block.settings.link_2_text != blank %}
            <a href="{{ block.settings.link_2_url }}" class="ai-big-logo-footer-nav-link-{{ ai_gen_id }}">
              {{ block.settings.link_2_text }}
            </a>
          {% endif %}
          {% if block.settings.link_3_text != blank %}
            <a href="{{ block.settings.link_3_url }}" class="ai-big-logo-footer-nav-link-{{ ai_gen_id }}">
              {{ block.settings.link_3_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.show_column_2 %}
        <div class="ai-big-logo-footer-nav-column-{{ ai_gen_id }}">
          {% if block.settings.link_4_text != blank %}
            <a href="{{ block.settings.link_4_url }}" class="ai-big-logo-footer-nav-link-{{ ai_gen_id }}">
              {{ block.settings.link_4_text }}
            </a>
          {% endif %}
          {% if block.settings.link_5_text != blank %}
            <a href="{{ block.settings.link_5_url }}" class="ai-big-logo-footer-nav-link-{{ ai_gen_id }}">
              {{ block.settings.link_5_text }}
            </a>
          {% endif %}
          {% if block.settings.link_6_text != blank %}
            <a href="{{ block.settings.link_6_url }}" class="ai-big-logo-footer-nav-link-{{ ai_gen_id }}">
              {{ block.settings.link_6_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </nav>

    {% if block.settings.logo_text != blank %}
      <div class="ai-big-logo-footer-logo-{{ ai_gen_id }}">
        {{ block.settings.logo_text }}
      </div>
    {% endif %}
  </div>
</div>

