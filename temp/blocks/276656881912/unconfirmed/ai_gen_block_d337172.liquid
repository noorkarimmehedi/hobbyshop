{% doc %}
  @prompt
    generate a big logo section for me i can import image from shopify.section should be customizable

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-big-logo-section-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.alignment }};
  }

  .ai-big-logo-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-big-logo-wrapper-{{ ai_gen_id }} {
    display: inline-block;
    position: relative;
  }

  .ai-big-logo-image-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: auto;
    max-width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    {% if block.settings.enable_shadow %}
      box-shadow: 0 {{ block.settings.shadow_vertical_offset }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    {% endif %}
    transition: transform 0.3s ease;
  }

  {% if block.settings.enable_hover_effect %}
    .ai-big-logo-image-{{ ai_gen_id }}:hover {
      transform: scale({{ block.settings.hover_scale | divided_by: 100.0 }});
    }
  {% endif %}

  .ai-big-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: {{ block.settings.logo_width | times: 0.6 }}px;
    max-width: 100%;
    background-color: #f8f8f8;
    border: 2px dashed #d1d1d1;
    border-radius: {{ block.settings.border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    {% if block.settings.enable_shadow %}
      box-shadow: 0 {{ block.settings.shadow_vertical_offset }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-big-logo-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
    color: #999;
  }

  .ai-big-logo-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 15px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 8px 12px;
    border-radius: 4px;
    white-space: nowrap;
  }

  .ai-big-logo-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-big-logo-subtext-{{ ai_gen_id }} {
    margin: {{ block.settings.subtext_spacing }}px 0 0;
    font-size: {{ block.settings.subtext_size }}px;
    color: {{ block.settings.subtext_color }};
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    .ai-big-logo-section-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-big-logo-image-{{ ai_gen_id }},
    .ai-big-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width_mobile }}px;
    }

    .ai-big-logo-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.logo_width_mobile | times: 0.6 }}px;
    }

    .ai-big-logo-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-big-logo-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-big-logo-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-big-logo-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-big-logo-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}<div class="ai-big-logo-wrapper-{{ ai_gen_id }}">
      {% if block.settings.logo_image %}
        {% if block.settings.logo_link != blank %}
          <a href="{{ block.settings.logo_link }}">
        {% endif %}
        <img
          src="{{ block.settings.logo_image | image_url: width: 2000}}"
          alt="{{ block.settings.logo_image.alt | default: block.settings.heading | escape }}"
          class="ai-big-logo-image-{{ ai_gen_id }}"
          width="{{ block.settings.logo_image.width }}"
          height="{{ block.settings.logo_image.height }}"
          loading="lazy"
        >
        {% if block.settings.logo_link != blank %}
          </a>
        {% endif %}{% else %}
        <div class="ai-big-logo-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}<div class="ai-big-logo-empty-state-{{ ai_gen_id }}">
            Add your logo image
          </div>
        </div>
      {% endif %}
    </div>

    {% if block.settings.subtext != blank %}
      <div class="ai-big-logo-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</div>
    {% endif %}
  </div>
</div>

