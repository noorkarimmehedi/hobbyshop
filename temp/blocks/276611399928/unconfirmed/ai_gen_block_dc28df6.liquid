{% doc %}
  @prompt
    create a section for footer big logo with opacity and image can be added from shopify

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-logo-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-footer-logo-wrapper-{{ ai_gen_id }} {
    position: relative;
    opacity: {{ block.settings.logo_opacity | divided_by: 100.0 }};
    transition: opacity 0.3s ease;
  }

  .ai-footer-logo-wrapper-{{ ai_gen_id }}:hover {
    opacity: {{ block.settings.logo_hover_opacity | divided_by: 100.0 }};
  }

  .ai-footer-logo-image-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width_desktop }}px;
    height: auto;
    max-width: 100%;
    display: block;
  }

  .ai-footer-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width_desktop }}px;
    height: 120px;
    max-width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    position: relative;
  }

  .ai-footer-logo-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-footer-logo-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-footer-logo-image-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width_mobile }}px;
    }

    .ai-footer-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width_mobile }}px;
      height: 80px;
    }
  }
{% endstyle %}

<div class="ai-footer-logo-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-logo-wrapper-{{ ai_gen_id }}">
    {% if block.settings.logo_image %}
      {% if block.settings.logo_link %}
        <a href="{{ block.settings.logo_link }}">
          <img
            src="{{ block.settings.logo_image | image_url: width: 800}}"
            alt="{{ block.settings.logo_image.alt | default: shop.name | escape }}"
            class="ai-footer-logo-image-{{ ai_gen_id }}"
            width="{{ block.settings.logo_image.width }}"
            height="{{ block.settings.logo_image.height }}"
            loading="lazy"
          >
        </a>
      {% else %}
        <img
          src="{{ block.settings.logo_image | image_url: width: 800 }}"
          alt="{{ block.settings.logo_image.alt | default: shop.name | escape }}"
          class="ai-footer-logo-image-{{ ai_gen_id }}"
          width="{{ block.settings.logo_image.width }}"
          height="{{ block.settings.logo_image.height }}"
          loading="lazy"
        >
      {% endif %}
    {% else %}
      <div class="ai-footer-logo-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}<div class="ai-footer-logo-empty-state-{{ ai_gen_id }}">
          Add your logo image
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Footer big logo",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image"
    },
    {
      "type": "url",
      "id": "logo_link",
      "label": "Logo link"
    },
    {
      "type": "range",
      "id": "logo_width_desktop",
      "min": 100,
      "max": 500,
      "step": 20,
      "unit": "px",
      "label": "Logo width (desktop)",
      "default": 300
    },
    {
      "type": "range",
      "id": "logo_width_mobile",
      "min": 80,
      "max": 300,
      "step": 20,
      "unit": "px",
      "label": "Logo width (mobile)",
      "default": 200
    },
    {
      "type": "header",
      "content": "Opacity"
    },
    {
      "type": "range",
      "id": "logo_opacity",
      "min": 10,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Logo opacity",
      "default": 80
    },
    {
      "type": "range",
      "id": "logo_hover_opacity",
      "min": 10,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Logo hover opacity",
      "default": 100
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Logo alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Footer big logo"
    }
  ]
}
{% endschema %}