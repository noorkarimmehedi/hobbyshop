    }

    .ai-video-showcase-modal-{{ ai_gen_id }} {
      width: 95%;
    }
  }
{% endstyle %}

<video-showcase-{{ ai_gen_id }} class="ai-video-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-showcase-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-video-showcase-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-video-showcase-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-video-showcase-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}<div class="ai-video-showcase-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign video_key = 'video_' | append: i
          assign video_title_key = 'video_' | append: i | append: '_title'
          assign video_description_key = 'video_' | append: i | append: '_description'
          assign video_enabled_key = 'video_' | append: i | append: '_enabled'

          assign video = block.settings[video_key]
          assign video_title = block.settings[video_title_key]
          assign video_description = block.settings[video_description_key]
          assign video_enabled = block.settings[video_enabled_key]
        %}

        {% if video_enabled %}
          <div class="ai-video-showcase-item-{{ ai_gen_id }}" data-video-index="{{ i }}">
            <div class="ai-video-showcase-video-wrapper-{{ ai_gen_id }}">
              {% if video != blank %}
                <video
                  class="ai-video-showcase-video-{{ ai_gen_id }}"
                  muted
                  preload="metadata"
                  data-video-src="{{ video }}"
                >
                  <source src="{{ video }}" type="video/mp4">
                </video>
                <button
                  class="ai-video-showcase-play-button-{{ ai_gen_id }}"
                  aria-label="Play video"
                data-video-url="{{ video }}"
                >
                  <svg viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </button>
              {% else %}
                <div class="ai-video-showcase-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}<div class="ai-video-showcase-empty-state-{{ ai_gen_id }}">
                    Add a video
                  </div>
                </div>
              {% endif %}
            </div>

            {% if video_title != blank or video_description != blank %}
              <div class="ai-video-showcase-content-{{ ai_gen_id }}">
                {% if video_title != blank %}
                  <h3 class="ai-video-showcase-video-title-{{ ai_gen_id }}">{{ video_title }}</h3>
                {% endif %}
                {% if video_description != blank %}
                  <p class="ai-video-showcase-video-description-{{ ai_gen_id }}">{{ video_description }}</p>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="ai-video-showcase-overlay-{{ ai_gen_id }}" data-overlay>
    <div class="ai-video-showcase-modal-{{ ai_gen_id }}">
      <button
        class="ai-video-showcase-close-button-{{ ai_gen_id }}"
        aria-label="Close video"
        data-close
      >
        <svg viewBox="0 0 24 24" fill="currentColor">
          <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
        </svg>
      </button>
      <video
        class="ai-video-showcase-modal-video-{{ ai_gen_id }}"
        controls
        data-modal-video
      >
      </video>
    </div>
  </div>
</video-showcase-{{ ai_gen_id }}>

<script>
(function() {
  class VideoShowcase{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.playButtons = this.querySelectorAll('.ai-video-showcase-play-button-{{ ai_gen_id }}');
      this.overlay = this.querySelector('.ai-video-showcase-overlay-{{ ai_gen_id }}');
      this.modalVideo = this.querySelector('.ai-video-showcase-modal-video-{{ ai_gen_id }}');
      this.closeButton = this.querySelector('.ai-video-showcase-close-button-{{ ai_gen_id }}');

      this.setupEventListeners();
    }

    setupEventListeners() {
      this.playButtons.forEach(button => {
        button.addEventListener('click', (e) => {
          const videoUrl = button.dataset.videoUrl;
          if (videoUrl) {
            this.openModal(videoUrl);
          }
        });
      });

      this.closeButton.addEventListener('click', () => {
        this.closeModal();
      });

      this.overlay.addEventListener('click', (e) => {
        if (e.target === this.overlay) {
          this.closeModal();
        }
      });document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && this.overlay.classList.contains('active')) {
          this.closeModal();
        }
      });
    }

    openModal(videoUrl) {
      this.modalVideo.src = videoUrl;
      this.overlay.classList.add('active');document.body.style.overflow = 'hidden';
      this.modalVideo.play();
    }

    closeModal() {
      this.modalVideo.pause();
      this.modalVideo.src = '';
      this.overlay.classList.remove('active');
      document.body.style.overflow = '';
    }
  }

  customElements.define('video-showcase-{{ ai_gen_id }}', VideoShowcase{{ ai_gen_id }});
})();
</script>

