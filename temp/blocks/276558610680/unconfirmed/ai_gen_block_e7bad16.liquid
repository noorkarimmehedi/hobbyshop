{% style %}
  .ai-video-showcase-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-showcase-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-video-showcase-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom:40px;
  }

  .ai-video-showcase-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-video-showcase-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-video-showcase-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.video_spacing }}px;
  }

  .ai-video-showcase-item-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.video_background }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 12px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-video-showcase-item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, {{ block.settings.shadow_opacity | times: 1.5 | divided_by: 100.0 }});
  }

  .ai-video-showcase-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.video_aspect_ratio }};
    background-color: #f4f4f4;
  }

  .ai-video-showcase-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: none;
  }

  .ai-video-showcase-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f8f8f8;
    color: #666;
    position: relative;
  }

  .ai-video-showcase-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-video-showcase-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    font-size: 12px;
    color: #666;
    text-align: center;
    white-space: nowrap;
  }

  .ai-video-showcase-play-button-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 2;
  }

  .ai-video-showcase-play-button-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
    transform: translate(-50%, -50%) scale(1.1);
  }

  .ai-video-showcase-play-button-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
    margin-left: 2px;
    fill: #333;
  }

  .ai-video-showcase-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-video-showcase-video-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.video_title_size }}px;
    color: {{ block.settings.video_title_color }};
    margin: 0 0 8px;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-video-showcase-video-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.video_description_size }}px;
    color: {{ block.settings.video_description_color }};
    margin: 0;
    line-height: 1.4;
  }

  .ai-video-showcase-overlay-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .ai-video-showcase-overlay-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-video-showcase-modal-{{ ai_gen_id }} {
    position: relative;
    width: 90%;
    max-width: 800px;
    aspect-ratio: 16/9;
    background-color: #000;
    border-radius: 8px;
    overflow: hidden;}

  .ai-video-showcase-modal-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    border: none;
  }

  .ai-video-showcase-close-button-{{ ai_gen_id }} {
    position: absolute;
    top: -40px;
    right: 0;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: 8px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .ai-video-showcase-close-button-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }

  .ai-video-showcase-close-button-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  @media screen and (max-width: 768px) {
